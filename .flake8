[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info
ignore =
    E203,  # Whitespace before ':' (conflicto con black)
    W503,  # Line break before binary operator (conflicto con black)
    E501   # Line too long (ya manejado por black)
per-file-ignores =
    __init__.py:F401
